<div class="row">
  <div class="col s9">
    <h4>New Price For <%= @item.name %></h4><br>
    <div class="card">    
      <div class="card-content">
        <%= simple_form_for(@item_price) do |f| %>
          <%= f.error_notification %>
          <div class="row">
          <p>&nbsp;&nbsp;&nbsp;Current price: <%= number_to_currency(@item.current_price) %></p>
        <p><h6><em>&nbsp;&nbsp;&nbsp;enter new price in terms of dollars and cents</em></h6></p>
            <div class="form-inputs">
                <%= f.input :item_id, as: :hidden, input_html: { value: @item.id } %>
                <%= f.input :price %>
          </div>
        </div>
      </div>
    </div>
      <div class="row">
        <div class="form-actions col s9">
          <%= f.button :submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= link_to 'Back', :back %>