<div id="tabbed">
  <tabs>

    <tab name="active customers" v-bind:selected="true">
      <%= render :partial => "customer_list", locals: {customers: @active_customers, state: 'Active'} %>
    </tab>

    <tab name="inactive customers">
      <%= render :partial => "customer_list", locals: {customers: @inactive_customers, state: 'Inactive'} %>
    </tab>

  </tabs>
</div>