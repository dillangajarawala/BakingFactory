<% if @addresses.empty? %>
  <p><em>You have no addresses at this time.</em></p>
<% else %>
<h4>My Addresses</h4>
<table class="table table-striped">
  <thead>
    <tr>
      <th width="225">Recipient</th>
      <th width="350">Address</th>
      <th width="75">Billing?</th>
      <th width="75">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= link_to address.recipient, address_path(address) %></td>
        <td>
          <%= render :partial => "partials/address_info", locals: {address: address} %>
        </td>
        <td align="center"><%= address.is_billing ? "Yes" : "No" %></td>      
        <td>
          <%= link_to(edit_address_path(address), class: 'btn-floating') do %>
            <i id="address-edit-icon" class="material-icons black-text">edit</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @addresses, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>  
<% end %>
<p>&nbsp;</p>