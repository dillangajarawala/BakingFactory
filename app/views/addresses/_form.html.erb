<%= simple_form_for @address, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Address</legend>

    <%= f.input :customer_id, collection: Customer.active.alphabetical, include_blank: true, label_html: {class: "active"} %>

    <%= f.input :recipient, label_html: {class: "active"} %>
    <%= f.input :street_1, label_html: {class: "active"} %>
    <%= f.input :street_2, label_html: {class: "active"} %>
    <%= f.input :city, label_html: {class: "active"} %>
    <%= f.input :state, collection: Address::STATES_LIST, include_blank: true, label_html: {class: "active"} %>
    <%= f.input :zip, label_html: {class: "active"} %>
    <%= f.input :is_billing, label: 'Billing? ' %>
    <%= f.input :active %>


    <div class="form-actions">
      <%= f.submit nil, :class => 'button radius' %>
      <%= link_to 'Cancel', addresses_path, :class => 'button alert radius' %>
    </div>
  </fieldset>
<% end %>