<div class="row valign-wrapper" id="topbar">
  <div class="col s1">
    <%# link_to(image_tag('logos/logo_v2_80x80.png'), home_path) %>
  </div>
  <div class="col s9">
    <% if logged_in? && current_user.role?(:admin) %>
      <h2><%= link_to "Baking Factory", admin_dashboard_path, class: "home_link" %></h2>
    <% elsif logged_in? && current_user.role?(:customer) %>
      <h2><%= link_to "Baking Factory", customer_dash_path, class: "home_link" %></h2>
    <% elsif logged_in? && current_user.role?(:baker) %>
      <h2><%= link_to "Baking Factory", baker_path, class: "home_link" %></h2>
    <% elsif logged_in? && current_user.role?(:shipper) %>
      <h2><%= link_to "Baking Factory", shipper_path, class: "home_link" %></h2>
    <% else %>
      <h2><%= link_to "Baking Factory", home_path, class: "home_link" %></h2>
    <% end %>
  </div>
  <div class="col s2">
    <% if logged_in? && current_user.role?(:customer) %>
    <ul class="right">
    <li id="cart_logo"><%= link_to 'shopping_cart', cart_path, class: 'large material-icons yellow black-text' %><span class="badge yellow"><%= @num %></span></li>
    </ul>
    <% elsif logged_in? && current_user.role?(:admin) %>
      <%= render partial: "partials/search_without_title"%>
    <% end %>
  </div>
</div>