<br><br>
<% unless @previous_prices.empty? %>
  <div class="card hoverable">
    <div class="card-content">
      <span class="card-title">Price History</span>
    <table>
      <thead>
        <tr>
          <th width="120">Start Date</th>
          <th width="120">End Date</th>
          <th width="100">Price</th>
        </tr>
      </thead>
      <tbody>
      <% @previous_prices.each do |pp| %>
        <tr>
          <td><%= pp.start_date.strftime('%B %e, %Y') %></td>
        <td><% if pp.end_date.nil? %><i>Current Price<i><% else %><%= pp.end_date.strftime('%m/%d/%y') %><% end %></td>
          <td><%= number_to_currency pp.price %></td>
        </tr>
      <% end %>
    </table>
       </div>
    <% if can? :new, ItemPrice %>
      <div class="card-action">
        <%= link_to "Add a new price", new_item_price_path(item_id: @item.id), id: "add-new-price" %>
      </div>
    <% end %>
  </div>
  </div>
<% end %>
