<% unless previous_prices.empty? %>
  <div class="panel clearfix">
    <h3>Price History</h3>
    <table>
      <thead>
        <tr>
          <th width="120">Start Date</th>
          <th width="120">End Date</th>
          <th width="100">Price</th>
        </tr>
      </thead>
      <tbody>
      <% previous_prices.each do |pp| %>
        <tr>
          <td><%= pp.start_date.strftime('%m/%d/%y') %></td>
        <td><% if pp.end_date.nil? %><i>Current Price<i><% else %><%= pp.end_date.strftime('%m/%d/%y') %><% end %></td>
          <td><%= number_to_currency pp.price %></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end %>
