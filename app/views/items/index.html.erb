<% if logged_in? && current_user.role?(:customer) %>
<%= render partial: "partials/search_with_title", locals: {title: "Items"}%>
<% else %>
<h4 align="center">Items</h4>
<% end %>
<% if logged_in? && current_user.role?(:admin) %>
  <%= render partial: "partials/item_list", locals: {items: @breads,
                                                      item_type: 'breads'} %><br/>

  <%= render partial: "partials/item_list", locals: {items: @muffins,
                                                      item_type: 'muffins'} %><br/>

  <%= render partial: "partials/item_list", locals: {items: @pastries,
                                                      item_type: 'pastries'} %><br/>

  <% unless @inactive_items.nil? || @inactive_items.empty? %>
  <h5>Inactive Items</h5>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="300">Name</th>
        <th width="100">Price</th>
        <th width="100">Units</th>
        <th width="100">&nbsp;</th>
      </tr>
    </thead>
    <tbody>
      <% @inactive_items.each do |item| %>
        <tr>
          <td><%= link_to item.name, item_path(item) %></td>
          <td><%= number_to_currency item.current_price %></td>
          <td><%= item.units_per_item %> <%= item.category == 'bread' ? 'loaf' : item.category %>s</td>
          <td>
          <%= link_to "Activate", item_activate_path(item), class: 'button tiny radius warning' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
  <% if @inactive_items.nil? || @inactive_items.empty? %>
  <i>There are no inactive items at this time.</i><br><br>
  <% end %>
<% else %>
  <%= render partial: "item_grid", locals: {items: @breads,
                                                      item_type: 'breads'} %><br/>

  <%= render partial: "item_grid", locals: {items: @muffins,
                                                      item_type: 'muffins'} %><br/>

  <%= render partial: "item_grid", locals: {items: @pastries,
                                                      item_type: 'pastries'} %><br/>
<% end %>

<% if can? :create, Item %>
  <%= render partial: "partials/add_new_object", locals: {model_name: 'item'} %>
<% end %>