<h3>Items to Be Baked</h3><br>
<% if @breads.empty? && @muffins.empty? && @pastries.empty? %>
<p><em>No items need to be baked at this time</em><p>
<% else %>
<div id="tabbed">
  <tabs>

    <tab name="breads" v-bind:selected="true">
      <%= render :partial => "item_list", locals: {items: @breads, category: 'breads'} %>
    </tab>

    <tab name="muffins">
      <%= render :partial => "item_list", locals: {items: @muffins, category: 'muffins'} %>
    </tab>

    <tab name="pastries">
    <%= render :partial => "item_list", locals: {items: @pastries, category: "pastries"} %>
    </tab>

  </tabs>
</div>
<% end %>