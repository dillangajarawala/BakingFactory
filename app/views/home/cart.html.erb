  <h4>Your Cart</h4>
  <% if @order_items.empty? || @order_items.nil? %>
    <br><h6><em>There are no items in your cart. Add one <%= link_to 'here!', items_path %><em></h6>
  <% else %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th width="100">Item</th>
        <th width="225">Quantity</th>
        <th width="225">Subtotal</th>
        <th width="100"></th>
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |oi| %>
        <tr>
          <td><%= link_to oi.item.name, item_path(oi.item) %></td>
          <td><%= oi.quantity %></td>
          <td><%= number_to_currency oi.subtotal %></td>
          <td>
            <%= link_to(remove_from_cart_path(oi.item), class: 'button tiny radius') do %>
                &nbsp;<i class="material-icons red-text">close</i>&nbsp;
            <% end %>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <p>Order Subtotal: <%= number_to_currency @order_subtotal %><p><br><br>

  <%= link_to 'Checkout', new_order_path, class: 'waves-effect waves-light btn'%>
  <% end %>
